---
import { getEntryBySlug } from "astro:content";

const FeaturesData = await getEntryBySlug("aboutPage", "features");
const { header, features } = FeaturesData?.data;
import Header from "../ui/Heading.astro";
import { Image } from "astro:assets";
---

<section class='section-features'>
  <div class='bg-ColorOffWhite'>
    <div class='section-space'>
      <div class='container-default'>
        <Header heading={header} MaxWidth='max-w-[526px]' />
        <div
          class='grid gap-10 sm:grid-cols-2 xl:grid-cols-3 xl:gap-10 xxl:gap-x-20 xxl:gap-y-[60px]'>
          {
            features?.map(({ image, title, description }: any) => (
              <div
                class='jos'
                data-jos_animation='fade-left'
                data-jos_delay='0'>
                <div class='flex flex-col gap-6 text-center lg:flex-row lg:text-left'>
                  <Image
                    src={image}
                    alt='icon-yellow-feature-1'
                    width='60'
                    height='60'
                    class='mx-auto h-[60px] w-[60px] lg:mx-0'
                  />
                  <div>
                    <div class='mb-4 text-xl font-semibold leading-[1.33] -tracking-[0.5] xxl:text-2xl'>
                      {title}
                    </div>
                    <p>{description}</p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
