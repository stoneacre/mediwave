---
import { Image } from "astro:assets";
import ComingSoonForm from "../functional/ComingSoonForm";
import HeroImage from "../ui/HeroImage.astro";
import { getEntryBySlug } from "astro:content";

const { HeroSectionData } = Astro.props;
const { header, description, image, PreviewVideo, form } =
  HeroSectionData?.data;
const {
  data: { web3AccessKey },
} = await getEntryBySlug("site", "meta");
---

<section class='section-hero'>
  <div class='relative z-10 overflow-hidden bg-[#FAF9F5]'>
    <div
      class='pb-[60px] pt-28 md:pb-20 md:pt-36 lg:pb-[100px] lg:pt-[150px] xxl:pb-[120px] xxl:pt-[185px]'>
      <div class='container-custom'>
        <div
          class='grid gap-10 lg:grid-cols-2 xxl:grid-cols-[1.1fr_minmax(0,_1fr)]'>
          <div class='jos'>
            <div class='has-container-custom'>
              <h1 class='mb-6'>{header}</h1>
              <p>
                {description}
              </p>
              <ComingSoonForm
                client:only='react'
                formData={form}
                big={false}
                web3AccessKey={web3AccessKey}
              />
              <div
                class='mt-5 text-sm leading-6 md:justify-normal flex items-start'>
                <span class='mr-2 inline-block text-lg text-ColorBlue'>
                  <Image
                    src={"/assets/img/icons/badge.svg"}
                    height='20'
                    width='20'
                    alt='badgeIcon'
                  />
                </span>
                <span class='text-grey leading-normal'>{form?.text}</span>
              </div>
            </div>
          </div>
          <div class='jos'>
            <div class='relative flex items-center justify-center'>
              <HeroImage img={image} videoLink={PreviewVideo} />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='absolute left-0 top-0 -z-10'>
      <Image
        src='/assets/img/elements/hero-1-shape-1.svg'
        alt='hero-shape-1'
        width='607'
        height='792'
        class=''
      />
    </div>
    <div class='absolute bottom-0 right-0 -z-[1]'>
      <Image
        src='/assets/img/elements/hero-1-shape-2.svg'
        alt='hero-shape-2'
        width='607'
        height='792'
      />
    </div>
  </div>
</section>
