---
import { slug } from "github-slugger";
import BlogAside from "./BlogAside.astro";
import { Image } from "astro:assets";

const { page } = Astro.props;
const { data } = page;
---

<section class='blog-section'>
  <div class='section-space'>
    <div class='container-default'>
      <div
        class='grid grid-cols-1 gap-x-6 gap-y-10 lg:grid-cols-[1fr,minmax(416px,_0.45fr)]'>
        <div class='flex flex-col gap-y-10 lg:gap-y-14 xl:gap-y-20'>
          <div class='grid gap-y-10'>
            {
              data.map(
                ({
                  data: {
                    title,
                    date,
                    author,
                    category,
                    shortDescription,
                    image,
                  },
                }: any) => (
                  <div class='jos'>
                    <div class='group overflow-hidden rounded-[10px] border border-[#E1E1E] bg-white hover:border-white hover:shadow-[0_4px_60px_rgba(10,16,47,0.08)]'>
                      <a
                        href={`/blog/${slug(title)}`}
                        class='block overflow-hidden'>
                        <Image
                          src={image}
                          alt='blog-main-1'
                          width='856'
                          height='450'
                          class='h-auto w-full scale-100 object-cover transition-all duration-300 group-hover:scale-105'
                        />
                      </a>
                      <div class='p-[30px]'>
                        <ul class='flex flex-wrap items-center gap-4 text-base font-semibold sm:gap-6'>
                          <li>
                            <a
                              href={`/blog/${slug(title)}`}
                              class='flex items-center gap-x-[10px] hover:text-ColorBlue'>
                              <Image
                                src={author.img}
                                alt='blog-author-img-1'
                                width='45'
                                height='45'
                                class='rounded-[50%]'
                              />
                              {author?.name}
                            </a>
                          </li>
                          <li>
                            <a
                              href={`/blog/${slug(title)}`}
                              class='flex items-center gap-x-[10px] hover:text-ColorBlue'>
                              <i class='fa-regular fa-calendar' />
                              {date}
                            </a>
                          </li>
                          <li>
                            <a
                              href={`/blog/${slug(title)}`}
                              class='rounded-[50px] bg-ColorBlack/5 px-[26px] py-1.5 text-ColorBlack/60 hover:bg-ColorBlue hover:text-white'>
                              {category}
                            </a>
                          </li>
                        </ul>

                        <h2 class='mb-5 mt-8 line-clamp-2 font-body text-2xl font-bold leading-[1.4] -tracking-[1px] lg:text-3xl'>
                          <a href={`/blog/${slug(title)}`}>{title}</a>
                        </h2>
                        <p class='mb-7 line-clamp-2 last:mb-0'>
                          {shortDescription}
                        </p>
                        <a
                          href={`/blog/${slug(title)}`}
                          class='inline-flex items-center gap-x-2 text-base font-bold text-ColorBlack group-hover:text-ColorBlue'>
                          Read More
                          <span class='transition-all duration-300 ease-in-out group-hover:translate-x-2'>
                            <i class='fa-solid fa-arrow-right' />
                          </span>
                        </a>
                      </div>
                    </div>
                  </div>
                )
              )
            }
          </div>
          <nav
            aria-label='Pagination'
            class='jos flex justify-center'
            data-jos_animation='fade'>
            <ul class='flex gap-x-[15px]'>
              <li>
                {
                  page?.url?.prev ? (
                    <a
                      href={`${page?.url?.prev}`}
                      aria-label='Previous'
                      class='group flex h-10 w-10 items-center justify-center rounded-[50%] bg-white font-semibold transition-all duration-300 hover:bg-ColorBlue hover:text-white lg:h-[50px] lg:w-[50px]'>
                      <i class='fa-solid fa-chevron-left' />
                    </a>
                  ) : (
                    <button
                      aria-label='Previous'
                      style='cursor:not-allowed;'
                      class='group flex h-10 w-10 items-center justify-center rounded-[50%] bg-white font-semibold transition-all duration-300 hover:bg-ColorBlue hover:text-white lg:h-[50px] lg:w-[50px]'>
                      <i class='fa-solid fa-chevron-left' />
                    </button>
                  )
                }
              </li>

              <li>
                {
                  page?.url?.next ? (
                    <a
                      href={`${page?.url?.next}`}
                      aria-label='Next'
                      class='group flex h-10 w-10 items-center justify-center rounded-[50%] bg-white font-semibold transition-all duration-300 hover:bg-ColorBlue hover:text-white lg:h-[50px] lg:w-[50px]'>
                      <i class='fa-solid fa-chevron-right' />
                    </a>
                  ) : (
                    <button
                      aria-label='Next'
                      style='cursor:not-allowed;'
                      class='group flex h-10 w-10 items-center justify-center rounded-[50%] bg-white font-semibold transition-all duration-300 hover:bg-ColorBlue hover:text-white lg:h-[50px] lg:w-[50px]'>
                      <i class='fa-solid fa-chevron-right' />
                    </button>
                  )
                }
              </li>
            </ul>
          </nav>
        </div>
        <BlogAside />
      </div>
    </div>
  </div>
</section>
